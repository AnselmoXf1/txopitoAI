{
  "name": "txopito-ia",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Assistente educacional e consultivo multifuncional com gamificação e capacidades multimodais",
  "keywords": [
    "ai",
    "education",
    "gamification",
    "multimodal",
    "react",
    "gemini"
  ],
  "scripts": {
    "dev": "vite",
    "dev:backend": "tsx watch backend/server.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "vite build",
    "build:safe": "npx vite build",
    "build:render": "npm ci && npx vite build",
    "preview": "vite preview",
    "start": "npm run preview",
    "start:backend": "node backend/server.js",
    "check-env": "node check-env.js",
    "postinstall": "echo 'Dependencies installed successfully'",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Linting...' && echo 'No linter configured yet'",
    "test": "echo 'Testing...' && echo 'No tests configured yet'",
    "test-mongodb": "node test-mongodb-connection.js",
    "clean": "rm -rf dist node_modules/.vite",
    "reset-data": "echo 'Clearing localStorage data...' && node -e \"console.log('Use browser dev tools to clear localStorage')\""
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "firebase": "^10.7.1",
    "lucide-react": "^0.562.0",
    "mongodb": "^6.3.0",
    "node-fetch": "^3.3.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "local"
  },
  "author": "TXOPITO IA Team",
  "license": "MIT"
}
